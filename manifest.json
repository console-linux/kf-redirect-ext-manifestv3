{
  "name": "Codeforces.org redirector",
  "description": "Redirects requests from codeforces.org to codeforces.com/codeforces.org, making Codeforces work again",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["declarativeNetRequest"],
  "host_permissions": [
    "*://codeforces.org/*",
    "*://userpic.codeforces.org/*",
    "*://codeforces.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://codeforces.org/*", "*://*.codeforces.org/*"],
      "js": ["source.js"],
      "run_at": "document_end"
    }
  ]
}
